<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/title"
        android:contentDescription="@string/logo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="52sp" />

    <GridLayout
        android:id="@+id/main_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal"
        android:columnCount="3"
        android:rowCount="3"
        android:scrollbars="horizontal|vertical" >

        <Button
            android:id="@+id/button_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/schedule"
            android:drawableTop="@drawable/schedule"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/schedule"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/libraries"
            android:drawableTop="@drawable/library"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/libraries"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_auditorium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/auditoriums"
            android:drawableTop="@drawable/auditorium"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/auditoriums"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <Button
            android:id="@+id/button_leisure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/leisure"
            android:drawableTop="@drawable/leisure"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/leisure"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/map"
            android:drawableTop="@drawable/map"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/map"
            android:textAppearance="?android:attr/textAppearanceMedium" />

         <Button
            android:id="@+id/button_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/directories"
            android:drawableTop="@drawable/directory"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/directories"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_icampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/icampus"
            android:drawableTop="@drawable/icampus"
            android:gravity="center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="@string/icampus"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_moodle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/moodle"
            android:drawableTop="@drawable/moodle"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/moodle"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/button_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/office"
            android:drawableTop="@drawable/ucl_office"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/office"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </GridLayout>

</LinearLayout>