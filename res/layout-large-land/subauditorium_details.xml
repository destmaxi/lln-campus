<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="20dip" >
    
    <TextView
        android:id="@+id/subauditorium_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/subauditorium_address"
        android:textSize="42sp" />
        
    <TableLayout
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:stretchColumns="1">
    
						
    
    <ImageView
        android:id="@+id/access_picture"
        android:layout_width="match_parent"
        android:src="@drawable/logo_handicap"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:contentDescription="@string/access_description"
        android:visibility="invisible"
        android:layout_gravity="right"
        android:textSize="19sp" />
    
   
    </TableLayout>
    
    
    
    <TableLayout
    android:layout_marginTop="6dp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:stretchColumns="2"
    android:shrinkColumns="0,1,3">
    
    
        <TableRow
						android:orientation="horizontal"
						android:layout_height="20dip"
						android:layout_width="fill_parent" 
						android:gravity="center_horizontal">
						
    
    <TextView android:id="@+id/nbplaces"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/nbplaces"
        android:textSize="20sp" />
    
     <TextView android:id="@+id/nbplaces_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
    </TableRow>
    
    <TableRow>
	
        <TextView android:id="@+id/reseau"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/reseau"
        android:textSize="20sp" />
        
        <TextView android:id="@+id/reseau_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
        
        <TextView android:id="@+id/ecran"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/ecran"
        android:textSize="20sp" />
        
         <TextView android:id="@+id/ecran_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
          
    </TableRow>
    
    
    <TableRow>
        
        <TextView android:id="@+id/retro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/retro"
        android:textSize="20sp" />
        
         <TextView android:id="@+id/retro_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
         
        <TextView android:id="@+id/dia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/dia"
        android:textSize="20sp" />
        
         <TextView android:id="@+id/dia_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
      
    </TableRow>

    
    <TableRow>
        
      
         
         <TextView android:id="@+id/cabine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/cabine"
        android:textSize="20sp" />
        
         <TextView android:id="@+id/cabine_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
         
         <TextView android:id="@+id/sono"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/sono"
        android:textSize="20sp" />
        
         <TextView android:id="@+id/sono_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
                android:textIsSelectable="true"
        android:textSize="20sp" />
      
    </TableRow>
    
    <TableRow >
        
        <TextView android:id="@+id/video"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/video"
        android:textSize="20sp" />
        
         <TextView android:id="@+id/video_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
        
    </TableRow>
    
    <TableRow>
        
        
    
         
          <TextView android:id="@+id/mobilier"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:text="@string/mobilier"
        android:textSize="20sp" />
        
         <TextView android:id="@+id/mobilier_rep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textIsSelectable="true"
        android:textSize="20sp" />
      
    </TableRow>
    
   
    
    
    </TableLayout>
    
    <ImageView
        android:id="@+id/subauditorium_picture"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="fill_parent"
        android:contentDescription="@string/subauditorium_picture_description"
        android:visibility="visible"
        android:layout_gravity="right"
        android:text="@string/subauditorium_picture_message"
        android:textSize="19sp" />

  
    
     
</LinearLayout>