<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:gravity="top"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@color/Blue"
	android:padding="20dip">
	
    <TextView
        android:id="@+id/auditorium_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White" 
        android:textSize="69sp"
        android:gravity="top|center_horizontal"/>

    <TextView
        android:id="@+id/auditorium_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:layout_below="@+id/auditorium_name"
        android:layout_marginTop="17dp"
        android:text="@string/auditorium_address"
        android:textColor="@color/White"
        android:textSize="19sp" />
    
    <ImageView 
        android:id="@+id/auditorium_picture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:layout_below="@+id/auditorium_address"
        android:layout_marginTop="17dp"
        android:text="@string/auditorium_address"
        android:contentDescription="@string/auditorium_picture_description"
        android:textColor="@color/White"
        android:textSize="19sp"/>
    

    <Button
        android:id="@+id/button_auditorium_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="@string/auditorium_GPS" />

    <Button
        android:id="@+id/button_subauditorium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_auditorium_gps"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:gravity="bottom|center_horizontal"
        android:text="@string/sub_auditorium" />

</RelativeLayout>