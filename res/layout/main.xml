<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/maintitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/title"
        android:contentDescription="@string/logo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <GridLayout
        android:id="@+id/maingridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal"
        android:columnCount="3"
        android:rowCount="3"
        android:scrollbars="horizontal|vertical" >

        <Button
            android:id="@+id/button_horaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/horaire"
            android:drawableTop="@drawable/horaire"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/horaire"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textSize="15sp"/>

        <Button
            android:id="@+id/button_bibliotheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/bibliotheques"
            android:drawableTop="@drawable/bibliotheque"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/bibliotheques"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_auditoire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/auditoires"
            android:drawableTop="@drawable/auditoire"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/auditoires"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />


        <Button
            android:id="@+id/button_loisirs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/loisirs"
            android:drawableTop="@drawable/loisir"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/loisirs"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/map"
            android:drawableTop="@drawable/map"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/map"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

         <Button
            android:id="@+id/button_repertoire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/repertoire"
            android:drawableTop="@drawable/about"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/repertoire"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_icampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/icampus"
            android:drawableTop="@drawable/icampus"
            android:gravity="center_vertical|center_horizontal"
            android:padding="20dp"
            android:text="@string/icampus"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_moodle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/moodle"
            android:drawableTop="@drawable/moodle"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/moodle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_bureau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:contentDescription="@string/bureau"
            android:drawableTop="@drawable/bureau_ucl"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/bureau"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />
    </GridLayout>

</LinearLayout>