<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/solidaire_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="false"
        android:text="@string/solidaire_text1"
        android:textSize="20sp"/>
     <TextView
        android:id="@+id/solidaire_text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="false"
        android:text="@string/solidaire_text2"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
      <TextView
        android:id="@+id/solidaire_text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="false"
        android:text="@string/solidaire_text3"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
       <TextView
        android:id="@+id/solidaire_text4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="false"
        android:text="@string/solidaire_text4"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
        <TextView
        android:id="@+id/solidaire_text5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="false"
        android:text="@string/solidaire_text5"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
        <TextView
        android:id="@+id/solidaire_text6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="false"
        android:text="@string/solidaire_text6"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
        <TextView
        android:id="@+id/solidaire_text7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textIsSelectable="false"
        android:text="@string/solidaire_text7"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    
    <LinearLayout
        style="android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal" >

        	<Button
        	    style="@android:attr/buttonBarButtonStyle"
            	android:id="@+id/button_solidaire_avantages"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:gravity="center"
            	android:text="@string/button_solidaire_avantages" />

        	<Button
           	    style="@android:attr/buttonBarButtonStyle"     	    
            	android:id="@+id/button_solidaire_site"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:gravity="center"
            	android:text="@string/button_solidaire_site" />
        
    </LinearLayout>
    <ImageView
        android:id="@+id/solidaire_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:contentDescription="@string/solidaire"
        android:src="@drawable/carte_solidaire_icon"/>

</LinearLayout>